extends layout

block content
  main.homepage.container
    h2 Welcome to Sportify!
    if user
      p Hello #{user.email}
    else 
      p Welcome guest
    p Your gateway to personalized fitness.

    section.hero
      h3 Discover Top Sports Gear
      p From running shoes to yoga mats â€“ find what moves you.
      a.btn(href="/shop") Shop Now

    section.featured-products
      h3.section-title Featured Products

      .carousel#featured-carousel
        .carousel-track-container
          .carousel-track
            .carousel-slide
              img(src="/images/track-suit.jpg", alt="Track Suit")
              h4 Track Suit
              p $120
              a.btn(href="/product/track-suit") View Details

            .carousel-slide
              img(src="/images/jacket.jpg", alt="Bape Jacket")
              h4 Bape Jacket
              p $85
              a.btn(href="/product/bape-jacket") View Details

            .carousel-slide
              img(src="/images/jersey.jpg", alt="Jersey")
              h4 Jersey
              p $35
              a.btn(href="/product/jersey") View Details

        button.carousel-btn.prev &lt;
        button.carousel-btn.next &gt;

    footer
      p &copy; #{new Date().getFullYear()} Sportify. All rights reserved.
