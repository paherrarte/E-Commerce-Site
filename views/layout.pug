doctype html
html
  head
    title Sportify
    link(rel="stylesheet", href="/styles.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
  body
    header
      h1 Sportify
      nav(style="display: flex; align-items: center; justify-content: space-between;")
        .left-nav
          a(href="/home") Home
          a(href="/shop") Shop
          a(href="/profile") Profile
          a(href="/about") About
          if !user
            a(href="/login") Login
          else
            a(href="/logout") Logout
            
        //this search bar no loger needed
        //input(type="text", placeholder="Search..." class="search-bar")

        // Cart Dropdown
        .cart-dropdown
          a#cartToggle(href="#")
            i.fas.fa-shopping-cart
            |  Cart
          .cart-menu.hidden(id="cartMenu")
            ul#cartItems
              li No items in cart
            p.cart-total Total: $<span id="cartTotal">0.00</span>

    block content

    script(src="/cart.js")
    
    style.
      nav {
        background: #333;
        color: white;
        padding: 10px;
      }
      nav a {
        color: white;
        margin-right: 15px;
        text-decoration: none;
      }
      .search-bar {
        margin-left: 20px;
        padding: 4px 8px;
        border-radius: 4px;
        border: none;
      }
      .cart-dropdown {
        position: relative;
        display: inline-block;
        margin-left: auto;
        color: white;
      }
      .cart-menu {
        position: absolute;
        right: 0;
        background: white;
        border: 1px solid #ccc;
        padding: 10px;
        width: 250px;
        z-index: 1000;
        color: black;
      }
      .cart-menu.hidden {
        display: none;
      }
      .cart-menu ul {
        list-style: none;
        padding: 0;
        margin: 0 0 10px 0;
      }
      .cart-total {
        font-weight: bold;
        text-align: right;
      }
